<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15dp">



    <TextView
        android:id="@+id/practiceMessage_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/practiceMessage" />

    <RadioGroup
        android:id="@+id/logpopup_radiogroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/yes_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/practicedYes" />

        <RadioButton
            android:id="@+id/no_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PracticedNo" />

    </RadioGroup>

    <TextView
        android:id="@+id/ifYes_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/ifYes"
        tools:text="@string/ifYes" />

    <EditText
        android:id="@+id/practiceLength_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:visibility="visible"
        android:hint="@string/popupEditText_message" />

    <Button
        android:id="@+id/log_form_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>